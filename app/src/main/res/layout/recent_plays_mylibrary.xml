<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_3sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/recent_plays_roundedImageView"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/arjit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_5sdp"
        app:layout_constraintBottom_toTopOf="@+id/recent_plays_name"/>

    <TextView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/recent_plays_roundedImageView"
        app:layout_constraintRight_toRightOf="@+id/recent_plays_roundedImageView"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@+id/recent_plays_roundedImageView"
        android:text="Arjit"
        android:maxLines="2"
        android:maxEms="2"
        android:lines="2"
        android:textAlignment="center"
        android:id="@+id/recent_plays_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>